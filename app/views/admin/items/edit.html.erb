<div class="container">
  <div class="row mt-3">
    <h2>商品編集</h2>
  </div>

  <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
  <div class="row justify-content-center">
    <p class="col-2 font-weight-bold">商品画像
    <div class="col-4">
      <%= f.file_field :image %>
    </div>
  </div>

  <div class="row justify-content-center">
    <p class="col-2 font-weight-bold">商品名</p>
    <div class="col-4">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="row justify-content-center">
    <p class="col-2 font-weight-bold">商品説明</p>
    <div class="col-4">
      <%= f.text_area :introduction %>
    </div>
  </div>

  <div class="row justify-content-center">
    <p class="col-2 font-weight-bold">ジャンル</p>
    <div class="col-4"><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></div>
  </div>

  <div class="row justify-content-center">
    <p class="col-2 font-weight-bold">税抜価格</p>
    <div class="col-4">
      <%= f.text_field :price %>円
    </div>
  </div>

  <div class="row justify-content-center">
    <p class="col-2 font-weight-bold">販売ステータス</p>
      <div><%= f.radio_button :is_active, true %></div>
      <div class="col-1"><%= f.label :is_active, '販売中', value: true %></div>
  　　<div><%= f.radio_button :is_active, false %></div>
  　　<div class="col-2"><%= f.label :is_active, '販売停止中', value: false %></div>
  </div>

  <div class="row justify-content-center">
　　　 <%= f.submit '保存を変更', class: "btn btn-success center-block" %>
  </div>

  <% end %>

</div>
