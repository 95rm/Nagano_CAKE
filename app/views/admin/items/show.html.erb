<div class="container">
 <div class="row mt-3">
  <h2>商品詳細</h2>
 </div>

  <div class="row justify-content-center">
   <div class="mr-5">
     <%= image_tag @item.get_image(300,250) %>
   </div>
   <table>
    <tbody>
    <tr>
     <td style="width: 200px; "><p class="font-weight-bold">商品名</p></td><td><%= @item.name %></td>
    </tr>
    <tr>
     <td><p class="font-weight-bold">商品紹介</p></td><td><%= @item.introduction %></td>
    </tr>
    <tr>
     <td><p class="font-weight-bold">ジャンル</p></td><td><%=  @item.genre.name %></td>
    </tr>
    <tr>
     <td><p class="font-weight-bold">税込価格</p><p class="font-weight-bold">(税抜価格)</p></td>
     <td><%= @item.with_tax_price.to_s(:dalimited) %>(<%= @item.price %>)円</td>
    </tr>
    <tr>
     <td><p class="font-weight-bold">販売ステータス</p></td>
     <td>
      <% if @item.is_active == true %>
      <i class="font-weight-bold text-success"></i>販売中
     <% else @item.is_active == false %>
      <i class="font-weight-bold text-info"></i>販売中止
     <% end %>
     </td>
    </tr>
    </tbody>
   </table>

  </div>

   <div class="row justify-content-center mt-3">
    <%= link_to "編集する", edit_admin_item_path(@item.id) , class: "btn btn-success " %>
   </div>

</div>