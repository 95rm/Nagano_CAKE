<div class="container">
  <div class="row mt-3">
   <h2>ジャンル編集</h2>
  </div>
  <%= form_with model:@genre, url:admin_genre_path(@genre.id), method: :patch do |f| %>
  <div class="row mt-3">
      <p class="col-2 font-weight-bold">ジャンル名</p>
      <div class="col-3"><%= f.text_field :name %></div>
      <div class="col-3"><%= f.submit '変更を保存', class: "btn btn-success" %></div>
  </div>
  <% end %>
</div>
