<div class="container">
  <h2>ジャンル編集</h2>
  <div class="row">
    <form class="form-inline">
      <%= form_with model:@genre, url:admin_genre_path(@genre.id), method: :patch do |f| %>
      <p>ジャンル名</p>
      <%= f.text_field :name %>
      <%= f.submit '変更を保存' %>
      <% end %>
    </form>
  </div>
</div>
