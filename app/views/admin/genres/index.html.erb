<div class="container">
  <h2>ジャンル一覧・追加</h2>
  <div class="row">
       <form class="form-inline">
         <%= form_with model: @genre, url:admin_genres_path do |f| %>
         <p>ジャンル名</p>
          <%= f.text_field :name, class: "col-xs-3" %>
          <%= f.submit '新規登録', class: "btn btn-success" %>
         <% end %>
       </from>
  </div>
</div>

     <table>
       <thead>
         <tr>
           <th>ジャンル</th>
         </tr>
       </thead>
       <tbody>
         <% @genres.each do |genre| %>
         <tr>
           <th><%= genre.name %></th>
           <span>
             <th><%= link_to "編集する", edit_admin_genre_path, class: "btn btn-success" %></th>
           </span>
         </tr>
         <% end %>
       </tbody>
     </table>
