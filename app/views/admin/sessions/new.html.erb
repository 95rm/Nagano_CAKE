<div class="container">
<h2>管理者ログイン</h2>
<div class="row">
  <div class="col-md-9">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
  <div class="field">
    <%= f.label :"メールアドレス", class:"col-xs-3" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-xs-3" %>
  </div>
  </div>

  <div class="form-group">
  <div class="field">
    <%= f.label :"パスワード", class:"col-xs-3" %>
    <%= f.password_field :password, autocomplete: "current-password", class:"col-xs-3" %>
  </div>
  </div>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>
