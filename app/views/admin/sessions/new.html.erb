<div class="container">
 <div class="row">
  <h2 class="bg-secondary text-dark">管理者ログイン</h2>
 </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="row">
    <div class="col-3"><%= f.label :"メールアドレス" %></div>
    <div class="col-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
  </div>

  <div class="row">
    <div class="col-3"><%= f.label :"パスワード", class:"col-xs-3" %></div>
    <div class="col-3"><%= f.password_field :password, autocomplete: "current-password" %></div>
  </div>

  <div class="row">
    <div class="col-3"><%= f.submit "ログイン", class: "btn btn-primary" %></div>
  </div>

 <% end %>

<%= render "admin/shared/links" %>

</div>
