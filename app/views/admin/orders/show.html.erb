<div class="container">
  <h2>注文履歴詳細</h2>
  <div class="row">
    <div class="col-3"><p>購入者</p></div>
    <div class="col-3"><%= @order.shipping_name %></div>
  </div>
  <div class="row">
    <div class="col-3"><p>注文日</p></div>
    <div class="col-3"><%= @order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></div>
  </div>
  <div class="row">
    <div class="col-3"><p>郵送先</p></div>
    <div class="col-3"><%= @order.order_display %></div>
    <div class="col-3"><%= @order.shipping_name %></div>
  </div>
  <div class="row">
    <div class="col-3"><p>支払方法</p></div>
    <div class="col-3"><%= @order.payment_method_i18n %></div>
  </div>

  <%= form_with model: @order, url: admin_order_path, method: :patch do |f| %>
  <div class="row">
    <div class="col-3"><p>注文ステータス</p>
      <%#= f.select :status, options_from_collection_for_select(Order.all, :id, :status_i18n)このセレクトボックスだとデータベースに登録されたものが出力されるだけになってしまう %>
      <%= f.select :status, Order.statuses.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]} %>
      <%= f.submit '更新', class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
  <div class="row">
    <table class="col-md-7">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
      </tr>
    </thead>
    <% @order_total = 0 %><%# each文の中に定義すると毎回0が代入されてしまい金額が足されなくなる %>
    <tbody>
    <% @order_item.each do |order_item| %>
      <tr>
        <td><%= order_item.item.name %></td>
        <td><%= order_item.with_tax_price %></td><%#order_itemモデルにwith_tax_priceの数式記載 %>
        <td><%= order_item.number %></td>
        <td><%= order_item.subtotal %></td><%#order_itemモデルにsubtotalの数式記載 %>
        <td>
        <%= form_with model: order_item, url: admin_orders_detail_path, method: :patch do |f| %>
         <%= f.select :making_status, OrderItem.making_statuses.keys.map {|k| [I18n.t("enums.order_item.making_status.#{k}"), k]} %>
         <%= f.submit '更新', class: "btn btn-success" %>
        <% end %>
        </td>
        <% @order_total += order_item.with_tax_price*order_item.number %>
      </tr>
    <% end %>
  　</tbody>
  </table>

   <table class="col-md-2  offset-md-2">
　　<tbody>
    <tr>
      <th>商品合計</th><td><%= @order_total %></td>
    </tr>
    <tr>
      <% @postage = 800 %>
      <th>送料</th><td><%= @postage %></td>
    </tr>
    <tr>
      <th>請求金額合計</th><td><%= @order_total+@postage %></td>
    </tr>
    </tbody>
   </table>
  </div>
</div>
