<div class="container">
  <h2>注文履歴詳細</h2>
  <div class="row">
    <div class="col-3"><p>購入者</p></div>
    <div class="col-3"><%= @order.shipping_name %></div>
  </div>
  <div class="row">
    <div class="col-3"><p>注文日</p></div>
    <div class="col-3"><%= @order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></div>
  </div>
  <div class="row">
    <div class="col-3"><p>郵送先</p></div>
    <div class="col-3"><%= @order.order_display %></div>
    <div class="col-3"><%= @order.shipping_name %></div>
  </div>
  <div class="row">
    <div class="col-3"><p>支払方法</p></div>
    <div class="col-3"><%= @order.payment_method_i18n %></div>
  </div>

  <%= form_with model: @order, url: admin_order_path, method: :patch do |f| %>
  <div class="row">
    <div class="col-3"><p>注文ステータス</p>
      <%= f.select :order_id, options_from_collection_for_select(Order.all, :id, :status_i18n) %>
      <%= f.submit '更新', class: "btn btn-success" %>
    </div>
  </div>
  <% end %>

  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
      </tr>
    </thead>
    <% @order_item.each do |order_item| %>
    <tbody>
      <tr>
        <td><%= order_item.item.name %></td>
        <td><%= order_item.item.price %></td>
        <td><%= order_item.number %></td>
        <td><%= order_item.item.price*order_item.number %></td>
        <%= form_with model: order_item, url: admin_orders_detail_path, method: :pacth do |f| %>
         <td><%= f.select :order_item_id, options_from_collection_for_select(OrderItem.all, :id, :making_status) %></td>
        <% end %>
      </tr>
    </tbody>
    <% end %>
  </table>

   <table>
　　<tbody>
    <tr>
      <th>商品合計</th><td><%= @order.total_payment %></td>
    </tr>
    <tr>
      <% @postage = 800 %>
      <th>送料</th><td><%= @postage %></td>
    </tr>
    <tr>
      <th>請求金額合計</th><td><%= @order.total_payment+@postage %></td>
    </tr>
    </tbody>
   </table>



</div>
