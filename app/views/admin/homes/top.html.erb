<div class="container">
  <div class="row">
    <h2 class="bg-secondary text-dark">注文履歴一覧</h2>
  </div>

  <table>
    <thead>
      <tr>
        <th class="col-3">購入日時</th>
        <th class="col-3">購入者</th>
        <th class="col-3">注文個数</th>
        <th class="col-3">注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @order.each do |order| %>
      <tr>
        <% total_items = 0 %>
        <span>
         <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"), admin_order_path(order.id) %></td>
        </span>
        <td><%= order.shipping_name %></td>
        <% order.order_items.each do |order_item| %>
        <% total_items += order_item.number %>
        <% end %>
        <td><%= total_items %></td>
        <td><%= order.status_i18n %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>