<div class="container">
  <h2>注文履歴詳細</h2>

  <p>注文情報</p>
  <table border = "1">
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td>
        <%= @order.shipping_postal_code %>
        <%= @order.shipping_address %></br>
        <%= @order.shipping_name %>
      </td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td><%= @order.status_i18n %></td>
    </tr>
  </table>

  <p>請求情報</p>
  <table border = "1">
    <tr>
      <th>商品合計</th>
      <% @postage = 800 %>
       <td><%= @total = @order.total_payment - @postage %></td>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= @postage %></td>
    </tr>
    <tr>
      <th>ご請求額</th>
      <td><%= @postage + @total %></td>
    </tr>
  </table>

  <p>注文内容</p>
  <table border = "1">
    <thead>
      <tr>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @order_item.each do |order_item| %>
      <tr>
        <td><%= order_item.item.name %></td>
        <td><%= order_item.subtotal %></td> <%#order_itemモデルにsubtotalの数式記載 %>
        <td><%= order_item.number %></td>
        <td><%= order_item.item.with_tax_price * order_item.number %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
