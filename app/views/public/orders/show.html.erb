<div class="container">
  <h2>注文履歴詳細</h2>
  
  <p>注文情報</p>
  <table border = "1">
    <tr>
      <% @orders.each do |order| %>
      <th>注文日</th>
      <td><%= order.created_at %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td>
        <%= order.shipping_postal_code %>
        <%= order.shipping_address %>
        <%= order.shipping_name %>
      </td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= order.payment_method %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td><%= order.status %></td>
      <% end %>
    </tr>
  </table>
  
  <p>請求情報</p>
  <table border = "1">
    <tr>
      <th>商品合計</th>
      <td>d</td>
    </tr>
    <tr>
      <th>配送料</th>
      <% @postage = 800 %>
      <td><%= @postage %></td>
    </tr>
    <tr>
      #請求額はどこから持ってくるか
      <th>ご請求額</th>
      <td><%#= @postage + @total %></td> 
    </tr>
  </table>
  
  <p>注文内容</p>
  <table border = "1">
    <thead>
      <tr>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @order_imte.each do |oredr_item| %>
      <tr>
        <td><%= order_item.item_cart.item.name %></td>
        <td><%= order_item.item_cart.item.price %></td>
        <td><%= order_item.cart_item.amount %></td>
        <td><%= order_item.cart_item.item.price * order_item.cart_item.amount %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
