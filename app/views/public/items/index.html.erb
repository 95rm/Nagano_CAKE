<div class="container">
  <div class="row mt-3">
    <h2>商品一覧(全<%= @item .count %>件)</h2>
  </div>


  <div class="row mt-3">
    <% @item.each do |item| %>
    <div class="col-3">
　　　<%= link_to item_path(item.id) do %>
       <%= image_tag item.get_image(200,150) %>
      <% end %>
      <div class="d-flex align-items-center">
      <%= item.name %>
      </div>
      <div class="d-flex align-items-center">
      ￥<%= item.with_tax_price.to_s(:delimited) %>
      </div>
    </div>
    <% end %>
  </div>


  <%= paginate @item %>

</div>