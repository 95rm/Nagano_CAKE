<div class="container">
  <div class="row mt-3">
    <h2>会員情報編集<h2>
  </div>

  <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
   <div class="row">
     <p class="col-3">氏名</p>
     <div class="col-3"><%= f.text_field :last_name %></div>
     <div class="col-3"><%= f.text_field :first_name %></div>
   </div>

   <div class="row">
     <p class="col-3">フリガナ</p>
     <div class="col-3"><%= f.text_field :last_name_kana %></div>
     <div class="col-3"><%= f.text_field :first_name_kana %></div>
   </div>

   <div class="row">
     <p class="col-3">郵便番号</p>
     <div class="col-3"><%= f.text_field :postal_code %></div>
   </div>

   <div class="row">
     <p class="col-3">住所</p>
     <div class="col-3"><%= f.text_field :address %></div>
   </div>

   <div class="row">
     <p class="col-3">電話番号</p>
     <div class="col-3"><%= f.text_field :telephone_number %></div>
   </div>

   <div class="row">
     <p class="col-3">メールアドレス</p>
     <div class="col-3"><%= f.text_field :email %></div>
   </div>

   <div class="row justify-content-around mt-3">
    <%= f.submit '編集内容を保存', class: "btn btn-success" %>
    <%= link_to "退会する", customers_stop_path, class: "btn btn-danger" %>
   </div>

  <% end %>



</div>
