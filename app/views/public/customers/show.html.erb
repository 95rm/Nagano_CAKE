<div class="container">
  <div class="row mt-3">
    <h2>マイページ</h2>
  </div>

  <div class="row">
    <div class="col-1">
      <p class="font-weight-bold">登録情報</p>
    </div>
    <div class="ml-3">
     <%= link_to "編集する", customers_information_edit_path, class: "btn btn-success" %>
    </div>
  </div>

  <table class="table table-bordered">
    <tbody>
    <tr>
      <th>氏名</th>
      <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
    </tbody>
  </table>

  <div class="row">
    <div class="col-1">
      <p class="font-weight-bold">配送先</p>
    </div>
    <div class="col-3">
     <%= link_to "一覧を見る", address_index_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-1">
      <p class="font-weight-bold">注文履歴</p>
    </div>
    <div class="col-3">
     <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
    </div>
  </div>

</div>
